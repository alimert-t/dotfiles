window {
  margin: 0px;
  border: 2px solid #00ffff;  /* Cyan border for the window */
  background-color: #181926;  /* Dark background for the window */
  min-width: 40%;
  border-radius: 12px;  /* Round corners for the window */
}

#input {
  margin: 8px;
  border: 2px solid #00ffff;  /* Cyan border for the input box */
  background-color: #44475a;  /* Dark background for the input box */
  color: #cad3f5;
  border-radius: 8px;  /* Round corners for the input box */
}

#inner-box {
  padding: 0 8px;
  border: none;
}

#outer-box {
  border: 2px solid #00ffff;  /* Cyan border for the outer box */
  margin: 4px;
  background-color: #181926;  /* Dark background for the outer box */
  border-radius: 12px;  /* Round corners for the outer box */
}

#scroll {
  margin: 0px;
  border: none;
}

#text {
  color: #cad3f5;  /* Light text color for items */
  border: none;
}

#entry {
  border-radius: 8px;  /* Round corners for individual entries */
  padding: 4px;
}

#entry:selected {
  background-color: #494d64;  /* Background color for selected items */
  border-radius: 8px;  /* Round corners for selected entries */
}

#entry:selected #text {
  font-weight: bold;
  color: #ffffff;  /* Light text color for selected items */
}

